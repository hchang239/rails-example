- provide :title, @user.name

.row
  %aside.col-md-4
    %section.user_info
      %h1
        = gravatar_for @user
        = @user.name
    %section.stats
      = render 'shared/stats'
  .col-md-8
    = render 'follow_form' if logged_in?
    - if @microposts.any?
      %h3= "Microposts #{ @user.microposts.count }"
      %ol.microposts
        = render @microposts
      .flickr_pagination
        = will_paginate @microposts